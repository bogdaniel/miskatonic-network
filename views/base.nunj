<!doctype html>
<html>
<head>
    <title>Miskatonic Network</title>

    <link rel="stylesheet" href="/build/miskatonic-network.min.css"/>
    {% block css %}{% endblock %}
</head>
<body>
<nav class="navbar navbar-inverse">
    <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/">
                <img width="20" height="20" src="/images/brand_icon.png" alt="Miskatonic Network"/>
            </a>
        </div>
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
                <li{% if app.url == '/' %} class="active"{% endif %}><a href="/">Miskatonic Network</a></li>
                <li{% if app.url == '/cards' %} class="active"{% endif %}><a href="/cards">Cards</a></li>
                <li{% if app.url == '/deck-builder' %} class="active"{% endif %}><a href="/deck-builder">Deck Builder</a></li>
                <li{% if app.url == '/play' %} class="active"{% endif %}><a href="/play">Play</a></li>
                <li{% if app.url == '/about' %} class="active"{% endif %}><a href="/about">About</a></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li><a href="#">X Games</a></li>
                {% if not app.user %}
                    <li{% if app.url == '/registration' %} class="active"{% endif %}><a href="/registration">Registration</a></li>
                    <li{% if app.url == '/login' %} class="active"{% endif %}><a href="/login">Login</a></li>
                {% endif %}
                {% if app.user %}
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            {{ app.user.username }}
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li{% if app.url == '/settings' %} class="active"{% endif %}><a href="/settings">Settings</a></li>
                            <li role="separator" class="divider"></li>
                            <li{% if app.url == '/logout' %} class="active"{% endif %}><a href="/logout">Logout</a></li>
                        </ul>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
</nav>

{% if flashMessage %}
    <div class="alert alert-{{ flashMessage.type }}" role="alert">{{ flashMessage.message }}</div>
{% endif %}

{% block body %}{% endblock %}

<script src="/build/miskatonic-network.min.js"></script>

{% block js %}{% endblock %}

<script type="text/javascript">
    (function (i, s, o, g, r, a, m) {
        i['GoogleAnalyticsObject'] = r;
        i[r] = i[r] || function () {
            (i[r].q = i[r].q || []).push(arguments)
        }, i[r].l = 1 * new Date();
        a = s.createElement(o),
                m = s.getElementsByTagName(o)[0];
        a.async = 1;
        a.src = g;
        m.parentNode.insertBefore(a, m)
    })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

    ga('create', 'UA-68678352-1', 'auto');
    ga('send', 'pageview');
</script>
</body>
</html>